{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2017",
    "lib": [
      "ESNext",
      "es2018",
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["./src/**/*"]
}