{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2017",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "lib",
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["./src/**/*"]
}